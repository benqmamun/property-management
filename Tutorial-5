Table
-------------------------
CREATE TABLE "PM_CUSTTYPE" 
   (	"CUSTTYPE_NO" NUMBER GENERATED ALWAYS AS IDENTITY MINVALUE 1 MAXVALUE 9999999999999999999999999999 INCREMENT BY 1 START WITH 1 CACHE 20 NOORDER  NOCYCLE  NOKEEP  NOSCALE  NOT NULL ENABLE, 
	"TYPE_NAME" VARCHAR2(30) NOT NULL ENABLE, 
	"SUB_CUSTTYPE_OF" NUMBER(10,0), 
	"DESCR" VARCHAR2(500), 
	"SS_CREATOR" NUMBER(30,0), 
	"SS_CREATED_ON" VARCHAR2(50), 
	"SS_MODIFIER" NUMBER(30,0), 
	"SS_MODIFIED_ON" VARCHAR2(50), 
	 PRIMARY KEY ("CUSTTYPE_NO")
  USING INDEX  ENABLE, 
	 UNIQUE ("TYPE_NAME")
  USING INDEX  ENABLE
   ) ;

  ALTER TABLE "PM_CUSTTYPE" ADD CONSTRAINT "FK_PM_CUSTTYPE_PARENT" FOREIGN KEY ("SUB_CUSTTYPE_OF")
	  REFERENCES "PM_CUSTTYPE" ("CUSTTYPE_NO") ON DELETE SET NULL ENABLE;

Query
-------------------------
SELECT 
    c.CUSTTYPE_NO,
    c.TYPE_NAME,
    c.SUB_CUSTTYPE_OF,
    p.TYPE_NAME AS PARENT_TYPE_NAME,
    c.DESCR,
    c.SS_CREATOR,
    uc.USER_NAME AS CREATED_BY,
    c.SS_CREATED_ON,
    c.SS_MODIFIER,
    um.USER_NAME AS MODIFIED_BY,
    c.SS_MODIFIED_ON
FROM 
    PM_CUSTTYPE c
LEFT JOIN 
    PM_CUSTTYPE p ON c.SUB_CUSTTYPE_OF = p.CUSTTYPE_NO
LEFT JOIN 
    PM_USER uc ON c.SS_CREATOR = uc.USER_NO
LEFT JOIN 
    PM_USER um ON c.SS_MODIFIER = um.USER_NO
ORDER BY 
    c.CUSTTYPE_NO asc;
